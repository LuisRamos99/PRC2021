extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Repositorios
        if lista.length > 0 
            .w3-container
                table(class="w3-table-all")
                    tr 
                        th Id
                        th Titulo
                    each b in lista
                        tr
                            td 
                              a(href=`/repositorio/${b.id}`) #{b.id}
                            td= b.tit
                a(href=`/` ) 
                    button(class="w3-btn w3-teal" type="submit" style="margin:20px") Voltar ao inicio
        else
            div(class="w3-container")
                p Ainda não há repositorios resgistados ... 
    footer(class="w3-container w3-teal")
        address Gerado por galuno :: 2021-Março, Luis Ramos